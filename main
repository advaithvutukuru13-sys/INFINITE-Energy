<script>
  // Fix the clock to show current time
function updateTime() {
  const now = new Date();
  let hours = now.getHours();
  const minutes = now.getMinutes();
  const ampm = hours >= 12 ? 'PM' : 'AM';
  hours = hours % 12;
  hours = hours ? hours : 12; // the hour '0' should be '12'
  const minutesStr = minutes.toString().padStart(2, '0');
  document.getElementById('current-time').textContent = `${hours}:${minutesStr} ${ampm}`;
}

// Fixed wind speed at 13 mph
const windSpeedMph = 4.9709818932;
const windSpeedKmh = Math.round(windSpeedMph * 1.60934);
document.getElementById('wind-speed').textContent = windSpeedKmh;

// Declare energy variables once
let hydroEnergy = 0;
let solarEnergy = 0;
let windEnergy = 0;
let energyInterval = null;
let energyRunning = false;

document.getElementById('mountainBtn').addEventListener('click', () => {
  document.getElementById('home').style.display = 'none';
  document.getElementById('location-details').style.display = 'block';
  updateTime();
});

// When "Total Energy Created" clicked, start big growth
document.getElementById('energyBtn').addEventListener('click', () => {
  if (!energyRunning) {
    energyRunning = true;
    document.getElementById('energy-details').style.display = 'block';
    document.getElementById('energyBtn').textContent = 'Updating...';

    energyInterval = setInterval(() => {
      // Big increase amounts
      const hydroIncrease = 20;
      const solarIncrease = 15;
      const windIncrease = 25;

      hydroEnergy += hydroIncrease;
      solarEnergy += solarIncrease;
      windEnergy += windIncrease;

      // Update display
      document.getElementById('hydro-amount').textContent = hydroEnergy.toFixed(2);
      document.getElementById('solar-amount').textContent = solarEnergy.toFixed(2);
      document.getElementById('wind-amount').textContent = windEnergy.toFixed(2);
      document.getElementById('total-energy').textContent = (hydroEnergy + solarEnergy + windEnergy).toFixed(2);
    }, 1000);
  }
});

// Optional: show individual energy on click
document.getElementById('hydropower').addEventListener('click', () => {
  alert(`Hydropower: ${hydroEnergy.toFixed(2)} kWh`);
});
document.getElementById('solar').addEventListener('click', () => {
  alert(`Solar: ${solarEnergy.toFixed(2)} kWh`);
});
document.getElementById('wind').addEventListener('click', () => {
  alert(`Wind: ${windEnergy.toFixed(2)} kWh`);
});

// Keep the clock updated every second
setInterval(updateTime, 2000);
</script>
</body>
